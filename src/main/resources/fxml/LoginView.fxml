<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="viewsfx.LoginController" xmlns:fx="http://javafx.com/fxml">

    <!-- Header -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="header">
            <Label text="Music System" styleClass="title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Help" onAction="#onHelp"/>
            <Button text="Close App" onAction="#onCloseApp"/>
        </HBox>
    </top>

    <!-- Centered, minimal login card -->
    <center>
        <VBox alignment="CENTER" spacing="18">
            <padding>
                <Insets top="40" right="20" bottom="40" left="20"/>
            </padding>

            <Label text="Welcome" styleClass="sectionTitle"/>

            <!-- Form container with constrained width -->
            <VBox alignment="CENTER" spacing="10" maxWidth="340">
                <!-- Email -->
                <VBox spacing="4" alignment="CENTER_LEFT" maxWidth="320">
                    <Label text="Email"/>
                    <TextField fx:id="emailField" promptText="you@example.com" maxWidth="320"/>
                </VBox>

                <!-- Password -->
                <VBox spacing="4" alignment="CENTER_LEFT" maxWidth="320">
                    <Label text="Password"/>
                    <PasswordField fx:id="passwordField" promptText="********" maxWidth="320"/>
                </VBox>

                <!-- Buttons centered under inputs -->
                <HBox alignment="CENTER" spacing="10">
                    <Button text="Login" onAction="#onLogin" minWidth="110"/>
                    <Button text="Register" onAction="#onRegister" minWidth="110"/>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Â© 2025 Music System POO"/>
        </HBox>
    </bottom>

</BorderPane>
